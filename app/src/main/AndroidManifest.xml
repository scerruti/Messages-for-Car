<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required for WebView and internet access -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Required for voice input -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Required for Android Auto/Automotive -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    
    <!-- Automotive feature -->
    <uses-feature
        android:name="android.hardware.type.automotive"
        android:required="true" />
    
    <!-- Optional features -->
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MessagesForCar"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <!-- Main Activity for the messaging interface -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:hardwareAccelerated="true"
            android:theme="@style/Theme.MessagesForCar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.APP_MESSAGING" />
            </intent-filter>
        </activity>

        <!-- Voice Assistant Activity for voice-based messaging -->
        <activity
            android:name=".VoiceActivity"
            android:exported="true"
            android:theme="@style/Theme.MessagesForCar.Voice">
            <intent-filter>
                <action android:name="android.intent.action.VOICE_COMMAND" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- QR Code Pairing Activity for device pairing -->
        <activity
            android:name=".ui.qr.QRCodePairingActivity"
            android:exported="false"
            android:theme="@style/Theme.MessagesForCar"
            android:screenOrientation="landscape"
            android:hardwareAccelerated="true" />

        <!-- Automotive App Service for Car UI -->
        <!--
        <service
            android:name=".automotive.MessagingCarAppService"
            android:exported="true"
            android:foregroundServiceType="connectedDevice">
            <intent-filter>
                <action android:name="androidx.car.app.CarAppService" />
                <category android:name="androidx.car.app.category.COMMUNICATION" />
            </intent-filter>
        </service>
        -->

        <!-- Background WebView Service for message interception -->
        <service
            android:name=".service.MessagesBackgroundService"
            android:exported="false"
            android:foregroundServiceType="connectedDevice"
            android:enabled="true">
        </service>

        <!-- Message handling service for reply/read actions -->
        <service
            android:name=".service.MessageActionService"
            android:exported="false"
            android:enabled="true">
        </service>

    </application>

</manifest>
